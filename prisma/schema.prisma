datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model PRODUCT {
  id                     String                          @id @unique
  category               PRODUCT_CATEGORIES
  currency               PRODUCT_CURRENCY
  advertIndex            PRODUCT_ADVERT_INDEX
  preferredCommunication PRODUCT_PREFERRED_COMMUNICATION
  subcategory            PRODUCT_SUBCATEGORIES
  condition              PRODUCT_CONDITION
}

model USER {
  id             String              @id @unique
  fullName       String
  createdAt      DateTime            @default(now())
  draftProductId String?
  draftProduct   DRAFT_PRODUCT_FORM? @relation(fields: [draftProductId], references: [draftId])
}

model DRAFT_PRODUCT_FORM {
  draftId         String                @id @unique
  title           String
  debatablePrice  Boolean
  description     String
  images          String[]
  location        String
  price           Int
  advertIndex     PRODUCT_ADVERT_INDEX
  sellerId        String
  category        PRODUCT_CATEGORIES
  subCategory     PRODUCT_SUBCATEGORIES
  keywords        String[]
  telephone       String
  whatsapp        String
  email           String
  date            DateTime
  slug            String
  sluggedKeywords String
  sellerName      String
  currency        PRODUCT_CURRENCY
  USER            USER[]
  details         Json?
  state           PRODUCT_STATE
  condition       PRODUCT_CONDITION
}

enum PRODUCT_CONDITION {
  NEW
  USED_LIKE_NEW
  USED_IN_GOOD_SHAPE
  USED
}

enum PRODUCT_STATE {
  TO_SELL
  TO_BUY
  TO_LOAN
  TO_REQUEST_LOANING
  TO_TRADE
}

