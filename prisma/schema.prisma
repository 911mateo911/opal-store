datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id                     String                          @id @unique
  category               PRODUCT_CATEGORIES
  currency               PRODUCT_CURRENCY
  advertIndex            PRODUCT_ADVERT_INDEX
  preferredCommunication PRODUCT_PREFERRED_COMMUNICATION
  subcategory            PRODUCT_SUBCATEGORIES
  condition              PRODUCT_CONDITION
}

model User {
  id             String               @id @unique
  fullName       String
  createdAt      DateTime             @default(now())
  draftProductId String?
  draftProducts  Draft_Product_Form[]
}

model Draft_Product_Form {
  draftId        String                @id @default(uuid())
  title          String
  debatablePrice Boolean
  description    String
  images         String[]
  location       String
  price          Int
  advertIndex    PRODUCT_ADVERT_INDEX
  category       PRODUCT_CATEGORIES
  subCategory    PRODUCT_SUBCATEGORIES
  telephone      String
  whatsapp       String?
  email          String
  created_at     DateTime              @default(now())
  slug           String
  sellerName     String
  currency       PRODUCT_CURRENCY
  details        Json
  state          PRODUCT_STATE
  condition      PRODUCT_CONDITION
  User           User?                 @relation(fields: [userId], references: [id])
  userId         String?
}

enum PRODUCT_CONDITION {
  NEW
  USED_LIKE_NEW
  USED_IN_GOOD_SHAPE
  USED
}

enum PRODUCT_STATE {
  TO_SELL
  TO_BUY
  TO_LOAN
  TO_REQUEST_LOANING
  TO_TRADE
}

enum PRODUCT_CATEGORIES {
  CAR
  APARTMENT
  HOUSEHOLDS_AND_FAMILY
  SPORTS
  ELECTRONICS
  HEALTH
  BUSINESS
  JOBS
}

enum PRODUCT_CURRENCY {
  ALL
  EUR
  USD
  GBP
  OTHER
}

enum PRODUCT_ADVERT_INDEX {
  GOLD
  SILVER
  REGULAR
}

enum PRODUCT_PREFERRED_COMMUNICATION {
  TEL
  WHATSAPP
  EMAIL
}

